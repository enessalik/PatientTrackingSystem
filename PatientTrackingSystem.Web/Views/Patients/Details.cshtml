@model PatientTrackingSystem.Web.Models.Patient

@{
    ViewData["Title"] = "Patient - Details";
}

<center><h1>Patient</h1></center>
<br>
<h1>Details</h1>
<br>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Model.id
        </dd>
        <dt class = "col-sm-2">
            ID Card
        </dt>
        <dd class = "col-sm-10">
            @Model.id_card
        </dd>
        <dt class = "col-sm-2">
            Name Surname
        </dt>
        <dd class = "col-sm-10">
            @Model.name_surname
        </dd>
        <dt class = "col-sm-2">
            Birthday
        </dt>
        <dd class = "col-sm-10">
            @Model.birthday.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Edit</a> 
</div>

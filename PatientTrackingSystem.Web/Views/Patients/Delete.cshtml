@model PatientTrackingSystem.Web.Models.Patient

@{
    ViewData["Title"] = "Patient - Delete";
}
<center><h1>Patient</h1></center>
<br>
<h1>Delete</h1>
<br>


<div>
    
    
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Model.id
        </dd>
        <dt class = "col-sm-2">
            ID Card
        </dt>
        <dd class = "col-sm-10">
            @Model.id_card
        </dd>
        <dt class = "col-sm-2">
            Name Surname
        </dt>
        <dd class = "col-sm-10">
            @Model.name_surname
        </dd>
        <dt class = "col-sm-2">
            Birthday
        </dt>
        <dd class = "col-sm-10">
            @Model.birthday.ToShortDateString()
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <a asp-action="Index"class="btn btn-secondary">Back to List</a>
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        
    </form>
</div>

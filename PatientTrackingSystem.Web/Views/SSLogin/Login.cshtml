@{
	Layout = null;
}



<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>LOGIN</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PatientTrackingSystem.Web.styles.css" asp-append-version="true" />
	<link href="~/css/login.css" rel="stylesheet">

</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="height: 150px;">
		</nav>
	</header>
<form asp-controller="SSLogin" asp-action="Login" method="post">
	<div class="login-wrap">
		<div class="login-html">
			<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
			<input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab" hidden>Forgot Password</label>
			<div class="login-form">
				<div class="sign-in-htm">
					<div class="group">
						<label for="Username" class="label">Username</label>
						<input name="Username" type="text" class="input">
						<span class="text-danger">@TempData["Alert"]</span>
					</div>
					<div class="group">
						<label for="Password" class="label">Password</label>
						<input name="Password" type="password" class="input" data-type="password">
						<span class="text-danger">@TempData["Alert2"]</span>
					</div>
					<div class="group">
						<input type="submit" class="button" value="Sign In">
					</div>
					<div class="hr"></div>
				</div>
				
			</div>
		</div>
	</div>
</form>
</body>
</html>


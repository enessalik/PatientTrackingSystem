@model IEnumerable<PatientTrackingSystem.Web.Models.Visit>

@{
	ViewData["Title"] = "Visits - Visits";
}

<h1>Visits</h1>

<p style="text-align: right;">
	<a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr class="table-success">
				<th>
					Visit ID
				</th>
				<th>
					Patient ID
				</th>
				<th>
					Visit Date
				</th>
				<th>
					Doctor
				</th>
				<th>
					Complaint
				</th>
				<th>
					Form Of Treatment
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.Visit_Id
					</td>
					<td>
						@item.Patient_Id
					</td>
					<td>
						@item.Visit_Date
					</td>
					<td>
						@item.Doctor
					</td>
					<td>
						@item.Complaint
					</td>
					<td>
						@item.Treatment
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Visit_Id" class="btn btn-primary">Edit</a>
						<a asp-action="Details" asp-route-id="@item.Visit_Id" class="btn btn-info">Details</a>
						<a asp-action="Delete" asp-route-id="@item.Visit_Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
